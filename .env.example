# AI Service API Keys
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
KLING_API_ACCESS_KEY=your-kling-access-key-here
KLING_API_SECRET_KEY=your-kling-secret-key-here

# Optional: Alternative AI Services
# OPENAI_API_KEY=your-openai-api-key-here

# Database
DATABASE_URL=sqlite:///./ai_video_creator.db
# For PostgreSQL: postgresql://user:password@localhost/ai_video_db

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Storage Settings
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Video Generation Settings
DEFAULT_VIDEO_DURATION=5
MAX_VIDEO_DURATION=30
DEFAULT_ASPECT_RATIO=16:9

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30